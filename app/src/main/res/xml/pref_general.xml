<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/location_title"
        android:key="@string/location_key"
        android:defaultValue="@string/default_location"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/units_title"
        android:key="@string/units_key"
        android:defaultValue="@string/default_unit"
        android:entries="@array/units_names"
        android:entryValues="@array/units_keys" />

</PreferenceScreen>